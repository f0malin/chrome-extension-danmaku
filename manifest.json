{
    "manifest_version": 2,
    
    "name": "Bullet subtitle",
    "description": "Add bullet subtitle function to any web page.",
    "version": "1.0",

    "icons": {
        "16":"icon16.png",
        "48":"icon48.png",
        "128":"icon128.png"
    },
    "author": "Achilles Xu",

    "browser_action": {
        "default_icon": "icon19.png"
    },
    "content_scripts": [
        {
            "matches": ["http://kids.lekan.com/", "http://video.sina.com.cn/l/pl/sportstv/*"],
            "js": ["jquery-2.1.0.min.js", "amplify.min.js", "ccl/CommentCore.js", "inject1.js"],
            "css": ["ccl/base.css"]
        }
    ],
    "background": {
        "scripts": ["jquery-2.1.0.min.js", "lsarray.js", "eventPage.js"],
        "persistent": false
    },
    "permissions": [
    ]
    /* deprecated 
    "content_security_policy": "script-src 'self'; object-src 'self' https://data.gtimg.cn"
    */
}
